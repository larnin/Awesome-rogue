#include "textdrawer.h"

TextDrawer::TextDrawer(const std::string & fontName, int charSize, const sf::Vector2u & textureSize)
    : m_vAlign(VAlign::V_CENTER)
    , m_hAlign(HAlign::H_CENTER)
    , m_font(fontName)
{
    resize(textureSize);
}

const sf::Texture & TextDrawer::getTexture() const
{
    return m_texture.getTexture();
}

void TextDrawer::setText(const std::string & text)
{
    m_text.setString(text);
    redraw();
}

