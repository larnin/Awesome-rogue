}

void TextDrawer::setTextSize(unsigned int size)
{
    m_text.setCharacterSize(size);
    redraw();
}

void TextDrawer::setTextColor(const sf::Color & c)
{
    m_text.setColor(c);
    redraw();
}

void TextDrawer::alignText(VAlign v, HALign h)
{
    m_vAlign = v;
    m_hAlign = h;
    redraw();
}

void TextDrawer::resize(const sf::Vector2u & size)
{
    m_texture.create(size.x, size.y);
    redraw();
}

void TextDrawer::redraw()
{
    m_texture.clear(sf::Color(0, 0, 0, 0));
    m_text.setPosition(m_text.);
}
